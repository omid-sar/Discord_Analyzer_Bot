# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Database Configuration
DATABASE_URL=sqlite:////path/to/your/project/discord_analyzer.db

# Analysis Configuration
MAX_MESSAGES_PER_CHANNEL=1000
ANALYSIS_BATCH_SIZE=50

# Letta Configuration (Optional)
LETTA_API_KEY=your_letta_api_key_here
USE_LETTA_MEMORY=false

# macOS Logging
LOG_LEVEL=INFO
LOG_FILE=/path/to/your/project/logs/discord_bot.log

# Customer Analysis Keywords (customize for your startup)
CUSTOMER_KEYWORDS=looking for,need help with,does anyone know,recommendation,suggest,problem with,issue with,frustrated with,solution for,anyone using,alternatives to,better than

# macOS Specific
PYTHONPATH=/path/to/your/project
